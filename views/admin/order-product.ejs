                        <h4>COD</h4>
                    </div>
                    <div class="col-lg-2 col-sm-2 col-4 col-status" style="padding-left: 100px;">
                        <h4><button id="edit-btn" data-id="<%=item?.productId?._id %>" style="background-color: antiquewhite;border: none;width: 140px;padding: 10px;">Edit</button></h4>
                    </div>

                </div> <!-- row .// -->
            </article> <!-- itemlist  .// -->
            
            <% }) %>

       
          
        </div> <!-- card-body end// -->
    </div> <!-- card end// -->
    <div class="pagination-area mt-30 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <li class="page-item active"><a class="page-link" href="#">01</a></li>
