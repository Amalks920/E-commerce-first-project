                            <option value="Cancelled" id="option" <% if(item.status === 'Cancelled') { %>selected="selected"<% } %>>Cancelled</option>

                            <!-- <option  value="placed" id="option" <% if(item.status === 'placed') { %>selected="selected"<% } %>>placed</option> -->
                        </select>

                    </div>

                    <div class="col-lg-2 col-sm-2 col-4 col-status" style="padding-left: 100px;">
                        <h4>â‚¹ <%=item.price %></h4></h4>
                    </div>
