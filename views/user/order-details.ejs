          <input
            type="email"
            placeholder="Enter your email..."
            name="email"
            required="" />
          <input type="submit" value="Submit" />
        </form>
      </div>
  
      <div class="clearfix"></div>
    </div>
    <!-- //newsletter-->
  </div>


 

